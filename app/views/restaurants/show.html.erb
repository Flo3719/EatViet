<header><h1 class="display-4"><%= @restaurant.name %></h1></header>

<p>Address: <%= @restaurant.address %></p>
<p>Coordinates: <%= @restaurant.latitude %> <%= @restaurant.longitude %></p>
<div class="row">
  <div class="col">
    <%= render 'map' %>
  </div>
  <div class="col">
      <h4>Menu</h4>
      <% @restaurant.items.each do |item| %>
        <%= turbo_stream_from item %>
        <%= render 'items/item', item: item %>
      <% end %>
    <%= render 'items/form' if current_user&.type == "Translator" %>
  </div>
</div>
